<h2 id="titleBadge" display="customers"><%= t('customer').pluralize %></h2>
<hr>
<%= search_form_for @search do |form| %>
  <div class="form">
    <div class="row">
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Name') %>
        <%= form.select :name_eq, Customer.pluck(:name), {:include_blank => t('all_customer_names')}, {class: 'form-control', id: 'customer_name_select', onchange: 'this.form.submit();'} %>
      </div>
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('locality') %>
        <%= form.select :locality_eq, Customer.distinct.order(:locality).pluck(:locality), {:include_blank => t('all_customer_localities')}, {class: 'form-control', id: 'customer_locality_select', onchange: 'this.form.submit();'} %>
      </div>
      <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-4 col-xl-auto button-add">
        <%= link_to '+', new_customer_path, {class: 'btn btn-primary', :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window'} %>
      </div>
    </div>
  </div>
<% end %>
<table class="table table-hover table-striped" id="table-to-color">
  <thead class=thead-dark>
  <tr>
    <th>
      <%= sort_link(@search, :name, t('customer_name')) %>
    </th>
    <th>
      <%= sort_link(@search, :mail, t('mail')) %>
    </th>
    <th>
      <%= sort_link(@search, :tva_record, t('tva_record')) %>
    </th>
    <th>
      <%= sort_link(@search, :street, t('street')) %>
    </th>
    <th>
      <%= sort_link(@search, :number, t('number')) %>
    </th>
    <th>
      <%= sort_link(@search, :cp, t('zip')) %>
    </th>
    <th>
      <%= sort_link(@search, :locality, t('locality')) %>
    </th>
    <th>
      <%= sort_link(@search, :country, t('country')) %>
    </th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% unless @customers.any? %>
    <tr>
      <td class="emptyTable" colspan="9">Aucune données à afficher</td>
    </tr>
  <% end %>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>
      <td><%= customer.mail %></td>
      <td><%= customer.tva_record %></td>
      <td><%= customer.street %></td>
      <td><%= customer.number %></td>
      <td><%= customer.cp %></td>
      <td><%= customer.locality %></td>
      <td><%= customer.country %></td>
      <td class="center-cell">
        <%= link_to edit_customer_path(customer), remote: true do %>
          <%= image_tag("edit-icon.png", size: "30x30") %>
        <% end %>
        <%= link_to customer, method: :delete, data: {confirm: t('confirm_delete')} do %>
          <%= image_tag("delete-icon.png", size: "30x30") %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="flickr_pagination">
  <hr>
  <%= will_paginate @customers %>
</div>

<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>

