<h2>Clients</h2>


<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item active">
    <a class="nav-link active" data-toggle="tab" href="#listing" role="tab">Listing</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#new" role="tab">Nouveau client</a>
  </li>
</ul>


<div class="tab-content">
  <div class="tab-pane fade show active" id="listing">
    <table class="table table-hover table-striped">
      <thead class=thead-dark>
      <tr>
        <th><%= t('Name') %></th>
        <th><%= t('mail') %></th>
        <th><%= t('tva_record') %></th>
        <th><%= t('street') %></th>
        <th><%= t('number') %></th>
        <th><%= t('zip') %></th>
        <th><%= t('locality') %></th>
        <th><%= t('country') %></th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @customers.each do |customer| %>
        <tr data-link="<%= edit_customer_path customer %>">
          <td><%= customer.name %></td>
          <td><%= customer.mail %></td>
          <td><%= customer.tva_record %></td>
          <td><%= customer.street %></td>
          <td><%= customer.number %></td>
          <td><%= customer.cp %></td>
          <td><%= customer.locality %></td>
          <td><%= customer.country %></td>
          <td>
            <%= link_to customer, method: :delete, data: {confirm: 'Are you sure?'} do %>
              <%= image_tag("delete-icon.png", size: "30x30") %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>

  </div>
  <div class="tab-pane fade" id="new">
    <%= render 'customers/new' %>
  </div>
</div>
