<%= form_with(model: @quotation, local: true, html: {autocomplete: 'off'}) do |form| %>
  <div class="form center-div">

    <div class="form-row">

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('customer') %>
        <%= form.collection_select :customer_id, Customer.all, :id, :name, {:include_blank => true}, {class: 'form-control', id: 'customer_edit_select'} %>
      </div>

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('status') %>
        <%= form.select(:status, Quotation.statuses.keys {|status| [status.value, status.value]}, {}, {class: 'form-control', id: "quotation_status", autocomplete: 'nope'}) %>
      </div>

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('date_locale') %>
        <div class="picker-container">
          <%= form.text_field :date, "data-provide" => 'datepicker', "data-date-format" => "dd/mm/yyyy", value: Time.zone.now.to_date.strftime("%d/%m/%Y"), autocomplete: 'off', id: "dateProject", class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('project') %>
        <%= form.grouped_collection_select :project_id, Customer.order(:name), :listmodel, :name, :id, :name, {:include_blank => t('none').capitalize}, {id: "quotation_projects", class: "form-control"} %>
      </div>

    </div>

    <div class="form-row">

      <div class="col-12 createButton">
        <%= form.submit t('create'), :class => "btn btn-dark form-group" %>
      </div>

    </div>
  </div>
<% end %>
