<%= form_with(model: @extra, local: true) do |form| %>
  <div class="form center-div">

    <% if @extra.id %>
      <h3><%= t('editing_extra') %></h3>
    <% else %>
      <h3><%= t('creating_extra') %></h3>
  <% end %>

    <div class="form-row">

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('ware_name') %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('unit') %>
        <%= form.text_field :unit, class: "form-control" %>
      </div>

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('unit_price') %>
        <%= form.text_field :unit_price, class: "form-control" %>
      </div>

      <div class="form-group col-xs-12 col-sm-4 col-md-12 col-lg-3 col-xl-3">
        <%= form.label t('tva_rate') %>
        <%= form.text_field :tva_rate, class: "form-control" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12 createButton">
        <%= form.submit t('create'),
                        :class => "btn btn-dark form-group" %>
      </div>
    </div>
  </div>
<% end %>
