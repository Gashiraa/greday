<h2 id="titleBadge"><%= t('extras').pluralize %></h2>



    <%= search_form_for @search do |form| %>
      <div class="form">
        <div class="row">

        </div>
      </div>
    <% end %>
    <%= link_to '+', new_extra_path, {class: 'btn btn-info', :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window'} %>

    <table class="table table-hover table-striped" id="table-to-color">
      <thead class=thead-dark>

      <tr>
        <th><%= t('Name') %></th>
        <th><%= t('unit') %></th>
        <th><%= t('unit_price') %>
        <th><%= t('tva_rate') %> </th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @extras.each do |extra| %>
        <tr>
          <td><%= extra.name %></td>
          <td><%= extra.unit %></td>
          <td><%= extra.unit_price %></td>
          <td><%= extra.tva_rate %></td>
          <td class="centerCell">
            <%= link_to edit_extra_path(extra), remote: true do %>
              <%= image_tag("edit-icon.png", size: "25x25") %>
            <% end %>
          </td>
          <td class="centerCell">
            <%= link_to extra, method: :delete, data: {confirm: t('confirm_delete')} do %>
              <%= image_tag("delete-icon.png", size: "25x25") %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class="flickr_pagination">
      <hr>
      <%= will_paginate @extras %>
    </div>

  <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
      </div>
    </div>
  </div>
</div>
