<!DOCTYPE html>
<html>
<head>

  <% if current_user.present? %>
    <title><%= @company.short_name %></title>
  <% end %>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag asset_path('favicon.png') %>

</head>

<div class="ui inverted attached menu">

  <% if current_user.present? %>
    <a class="item" href="/projects" id="logo"> <%= @company.short_name.to_s.upcase %> </a>
    <div data-somedata="<%= @company.short_name %>" id="company-id"></div>
<% else %>
    <a class="item" href="/projects" id="logo"> LOGIN </a>
  <% end %>

  <div class="menu">
    <% if current_user %>
      <%= content_tag :div, class: "locale", data: {locale: current_user.locale} do %>
      <% end %>
      <a class="blue item" href="/projects"> <%= t('projects').capitalize %>  </a>

      <a class="olive dropdown item" href="/invoices"> <%= t('invoices').capitalize %> </a>

      <% if @company.use_wares %>
        <a class="violet item" href="/wares"> <%= t('wares').capitalize %> </a>
      <% end %>

      <% if @company.use_services %>
        <a class="red item" href="/services"> <%= t('services').capitalize %> </a>
      <% end %>

      <a class="brown item" href="/customers"> <%= t('customers').capitalize %> </a>

      <% if @company.use_machines %>
        <a class="purple item" href="/machines"> <%= t('machines').capitalize %> </a>
      <% end %>

      <a class="yellow item" href="/extras"> <%= @company.use_articles == false ? t('extra').pluralize : t('article').pluralize %> </a>

      <% if @company.use_credit_notes %>
        <a class="green item" href="/expense_accounts"> <%= t('expense_accounts').capitalize %> </a>
      <% end %>

    <% end %>

  </div>

  <div class="right menu">

    <%#= link_to t('FR'), {:controller => '/application', :action => 'change_locale', :id => 'fr'}, class: "item" %>

    <%#= link_to t('EN'), {:controller => '/application', :action => 'change_locale', :id => 'en'}, class: "item" %>

    <%= link_to(t('logout'), destroy_user_session_path, method: :delete, class: "item logout-button") %>
  </div>

</div>

<% if notice %>
  <div id="notice" class="ui success floating message">
    <div class="header">
      <%= notice %>
    </div>
  </div>
<% end %>

<% if alert %>
  <div id="notice" class="ui negative floating message">
    <div class="header">
      <%= alert %>
    </div>
  </div>
<% end %>

<body>
<div class="content" id="primary-content">
  <%= yield %>
</div>

</body>
</html>


