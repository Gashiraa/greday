<%= form_with(model: @ware, local: true, id: 'waresForm') do |form| %>
  <div class="form">
    <div class="row">
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Project') %>
        <%= form.select(:project_id, Project.all.collect {|project| [project.name.to_s + ' - ' + project.customer.name , project.id]}, {:include_blank => true}, {class: 'form-control'}) %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Invoice') %>
        <%= form.text_field :invoice_id, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Name') %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Comment') %>
        <%= form.text_field :comment, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Status') %>
        <%= form.select(:status, Ware.statuses.keys{|status| [status.value,status.value]}, {}, {class: 'form-control'})%>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Provider discount')%>
        <%= form.text_field :provider_discount, class: "form-control" %>
      </div>


      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Customer') %>
        <%= form.select(:customer_id, Customer.all.collect {|customer| [customer.name, customer.id]}, {:include_blank => true}, {class: 'form-control'}) %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Quotation')%>
        <%= form.text_field :quotation_id, class: "form-control" %>
      </div>


      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-1">
        <%= form.label t('Quantity') %>
        <%= form.text_field :quantity, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-1">
        <%= form.label t('Margin') %>
        <%= form.text_field :margin, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Unit price') %>
        <%= form.text_field :unit_price, class: "form-control" %>
      </div>


      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-1">
        <%= form.label t('TVA rate') %>
        <%= form.text_field :tva_rate, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-1">
        <%= form.label t('Total cost') %>
        <%= form.text_field :total_cost, class: "form-control" %>
      </div>

      <div class="actions col-xs-10 col-sm-4 col-md-4 col-lg-2 createButton">
        <%= form.submit t('Create'), :class => "btn btn-dark form-group" %>
      </div>
    </div>
  </div>
<% end %>
