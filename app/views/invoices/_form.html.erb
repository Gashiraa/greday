<%= form_with(model: @invoice, local: true, html: {autocomplete: 'off'}) do |form| %>
  <div class="form">
    <div class="row">

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Customer') %>
        <%= form.collection_select :customer_id, Customer.all, :id, :name, {:include_blank => true}, {class: 'form-control'} %>

      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Status') %>
        <%= form.select(:status, Invoice.statuses.keys {|status| [status.value, status.value]}, {}, {class: 'form-control', autocomplete: 'nope'}) %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Date') %>
        <div class="picker-container">
          <%= form.date_select :date, {}, class: "date-picker form-control", autocomplete: 'nope' %>
        </div>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Wares') %>
        <%= form.select(:ware_ids, Ware.where(status: 'A facturer').or(Ware.where(customer_id: if @invoice
                                                                                                 @invoice.customer
                                                                                               else
                                                                                                 -1
                                                                                               end, project_id: nil))
            .collect {|ware| [ware.ware_name, ware.id]}, {}, {class: 'form-control', autocomplete: 'nope', :multiple => true}) %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Projects') %>
        <%= form.select(:project_ids, Project.where(status: 'TerminÃ©')
            .or(Project.where(customer_id: if @invoice
                                             @invoice.customer
                                           else
                                             -1
                                           end))
            .collect {|project| [project.name, project.id]}, {}, {class: 'form-control', autocomplete: 'nope', :multiple => true}) %>
      </div>

      <div class="actions col-xs-10 col-sm-4 col-md-4 col-lg-2 createButton">
        <%= form.submit t('Create'), :class => "btn btn-dark form-group" %>
      </div>
    </div>
  </div>
<% end %>
