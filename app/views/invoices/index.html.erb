<h2><%= t('Invoices') %></h2>

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item active">
    <a class="nav-link active" data-toggle="tab" href="#listing" role="tab">Listing</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#new" role="tab">Nouvelle facture</a>
  </li>
</ul>

<div class="tab-content">
  <div class="tab-pane fade show active" id="listing">
    <%= search_form_for @search do |form| %>
      <div class="form">
        <div class="row">
          <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
            <%= form.label t('Project') %>
            <%= form.collection_select :id_eq, Project.all, :id, :name, {:include_blank => true}, class: 'form-control', onchange: 'this.form.submit();' %>
          </div>
          <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
            <%= form.label t('Customer') %>
            <%= form.collection_select :customer_id_eq, Customer.all, :id, :name, {:include_blank => true}, class: 'form-control', onchange: 'this.form.submit();' %>
          </div>
          <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
            <%= form.label t('Status') %>
            <%= form.select :status_eq, Invoice.statuses.map {|status| [status[0], status[1].to_i]}, {:include_blank => true}, class: 'form-control', onchange: 'this.form.submit();' %>
          </div>
        </div>
      </div>
    <% end %>

    <table class="table table-hover table-striped">
      <thead class=thead-dark>
      <tr>
        <th><%= t('Customer') %></th>
        <th><%= t('Date') %></th>
        <th><%= t('Status') %></th>
        <th><%= t('Gross cost').to_s + ' (€)' %></th>
        <th><%= t('Total').to_s + ' (€)' %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @invoices.each do |invoice| %>
        <tr data-link="<%= edit_invoice_path invoice %>">
          <td>
            <%= invoice.customer ? invoice.customer.name : '' %>
          </td>
          <td><%= invoice.date %></td>
          <td><%= invoice.status %></td>
          <td><%= number_with_precision  invoice.total_gross, :precision => 2 %></td>
          <td><%= number_with_precision  invoice.total, :precision => 2 %></td>

          <td style="padding: 0">
            <%= link_to image_tag("pdf-icon.png", size: "50x50"), invoice_path(invoice.id, :format => :pdf) %>
            <%= link_to invoice, method: :delete, data: {confirm: 'Are you sure?'} do %>
              <%= image_tag("delete-icon.png", size: "30x30") %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>
  </div>
  <div class="tab-pane fade" id="new">
    <%= render 'invoices/new' %>
  </div>
</div>