<h2 id="titleBadge"><%= t(:service).pluralize %></h2>

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item active">
    <a class="nav-link active" data-toggle="tab" href="#listing" role="tab">Listing</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#new" role="tab">Nouvelle prestation</a>
  </li>
</ul>

<div class="tab-content">
  <div class="tab-pane fade show active" id="listing">
    <%= search_form_for @search do |form| %>
      <div class="form">
        <div class="row">

          <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
            <%= form.label t('project') %>
            <%= form.collection_select :project_id_eq, Project.all, :id, :name, {:include_blank => true}, class: 'form-control', onchange: 'this.form.submit();' %>
          </div>
          <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
            <%= form.label t('customer') %>
            <%= form.collection_select :customer_id_or_project_customer_id_eq, Customer.all, :id, :name, {:include_blank => true}, class: 'form-control', onchange: 'this.form.submit();' %>
          </div>
          <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
            <%= form.label t('status') %>
            <%= form.select :status_eq, Service.statuses.map {|status| [status[0], status[1].to_i]}, {:include_blank => true}, class: 'form-control', onchange: 'this.form.submit();' %>
          </div>
        </div>
      </div>
    <% end %>

    <table class="table table-hover table-striped" id="table-to-color">
      <thead class=thead-dark>
      <tr>
        <th><%= t(:project).capitalize %></th>
        <th><%= t('Name') %></th>
        <th><%= t('comment') %></th>
        <th ><%= t('status') %></th>
        <th><%= t('Date') %></th>
        <th><%= t('hourly_rate') %></th>
        <th><%= t('duration') %></th>
        <th><%= t('tva_rate') %></th>
        <th><%= t('total_cost') %></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @services.each do |service| %>
        <tr data-link="<%= edit_service_path service %>">
          <td>
            <%= service.project ? (link_to '#' + service.project.id.to_s, project_path(service.project.id)) : '' %>
          </td>
          <td><%= service.name %></td>
          <td><%= service.comment %></td>
          <td id="status-cell"><%= service.status %></td>
          <td><%= service.date %></td>
          <td><%= service.hourly_rate %></td>
          <td><%= service.duration.strftime('%H:%M') %></td>
          <td><%= service.tva_rate %></td>
          <td><%= number_with_precision service.total_cost, :precision => 2 %></td>
          <td>
            <%= link_to service, method: :delete, data: {confirm: t('confirm_delete')} do %>
              <%= image_tag("delete-icon.png", size: "30x30") %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="tab-pane fade" id="new">
    <%= render 'services/new' %>
  </div>
</div>
