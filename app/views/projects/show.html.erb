<h2 id="titleBadge"><%= t('project') %></h2>
<h4>
  <%= @project.name %> - <%= if @project.customer
                               @project.customer.name
                             end
%>

</h4>
<div id="projectId" data-somedata="<%= @project.id %>">
</div>
<h5>
  <%= link_to '+', new_ware_path, {class: 'btn btn-info', :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window'} %>
  <%= t('ware').pluralize.capitalize %>
</h5>
<table class="table table-hover table-striped" id="table-to-color">
  <thead class=thead-dark>
  <tr>
    <th><%= t('ware_name') %></th>
    <th><%= t('provider_name') %></th>
    <th><%= t('comment') %></th>
    <th><%= t('status') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% unless @project.wares.any? %>
    <tr>
      <td class="emptyTable" colspan="9">Aucune données à afficher</td>
    </tr>
  <% end %>
  <% @project.wares.each do |ware| %>
    <tr>
      <td><%= ware.ware_name %></td>
      <td><%= ware.provider_name %></td>
      <td><%= ware.comment %></td>
      <td id="status-cell"><%= ware.status %></td>
      <td class="centerCell">
        <%= link_to edit_ware_path(ware), remote: true do %>
          <%= image_tag("edit-icon.png", size: "30x30") %>
        <% end %>
        <%= link_to ware, method: :delete, data: {confirm: t('confirm_delete')} do %>
          <%= image_tag("delete-icon.png", size: "30x30") %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<h5>
  <%= link_to '+', new_service_path, {class: 'btn btn-info', :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window'} %>
  <%= t('service').pluralize.capitalize %>
</h5>

<table class="table table-hover table-striped" id="table-to-color2">
  <thead class=thead-dark>
  <tr>
    <th><%= t('Name') %></th>
    <th><%= t('comment') %></th>
    <th><%= t('status') %></th>
    <th><%= t('Date') %></th>
    <th><%= t('hourly_rate') %></th>
    <th><%= t('duration') %></th>
    <th><%= t('tva_rate') %></th>
    <th><%= t('total_cost') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% unless @project.services.any? %>
    <tr>
      <td class="emptyTable" colspan="9">Aucune données à afficher</td>
    </tr>
  <% end %>
  <% @project.services.each do |service| %>
    <tr>
      <td><%= service.name %></td>
      <td><%= service.comment %></td>
      <td id="status-cell"><%= service.status %></td>
      <td><%= service.date %></td>
      <td><%= service.hourly_rate %></td>
      <td><%= service.duration.strftime('%H:%M') %></td>
      <td><%= service.tva_rate %></td>
      <td><%= number_with_precision service.total_cost, :precision => 2 %></td>
      <td class="centerCell">
        <%= link_to edit_service_path(service), remote: true do %>
          <%= image_tag("edit-icon.png", size: "30x30") %>
        <% end %>
        <%= link_to service, method: :delete, data: {confirm: t('confirm_delete')} do %>
          <%= image_tag("delete-icon.png", size: "30x30") %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

