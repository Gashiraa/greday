<div class="header-project">
  <table>
    <tr>
      <td>
        <%= link_to t('create_new_project'), new_project_path, {class: 'btn btn-success', :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window'} %>
      </td>
      <td>
        <h2 id="titleBadge" display=<%= controller_name %>>
          <%= t('project').pluralize %>
        </h2>
      </td>
      <td>
      </td>
    </tr>
  </table>
</div>
<hr>
<%= search_form_for @search do |form| %>
  <div class="form">
    <div class="row">
      <h3> <%= form.label t('filtres') %> </h3>
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('project') %>
        <%= form.collection_select :id_eq, Project.all, :id, :name, {:include_blank => t('all_projects')}, {class: 'form-control', id: 'project_sort', onchange: 'this.form.submit();'} %>
      </div>
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('customer') %>
        <%= form.collection_select :customer_id_eq, Customer.all, :id, :name, {:include_blank => t('all_customers')}, {class: 'form-control', id: 'customer_sort', onchange: 'this.form.submit();'} %>
      </div>
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('status') %>
        <%= form.select :status_eq, Project.statuses.map {|status| [t(status[0]), status[1].to_i, {status: status[0]}]}, {:include_blank => t('all_status')}, {class: 'form-control', id: 'status_sort_select', onchange: 'this.form.submit();'} %>
      </div>
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('from') %>
        <div class="picker-container">
          <%= form.text_field :date_gteq, "data-provide" => 'datepicker', "data-date-format" => "dd/mm/yyyy", autocomplete: 'off', id: "sortProjectFrom", class: "form-control", onchange: 'this.form.submit();' %>
        </div>
      </div>
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('to') %>
        <div class="picker-container">
          <%= form.text_field :date_lteq, "data-provide" => 'datepicker', "data-date-format" => "dd/mm/yyyy", autocomplete: 'off', id: "sortProjectTo", class: "form-control", onchange: 'this.form.submit();' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<table class="table table-to-color">
  <thead class=thead-dark>
  <tr>
    <th class="center-cell">
      <%= sort_link(@search, :id, t('id_locale')) %>
    </th>
    <th class="small-column">
      <%= sort_link(@search, :customer_id, t('customer')) %>
    </th>
    <th>
      <%= sort_link(@search, :name, t('project_title')) %>
    </th>
    <th class="description-header">
      <%= sort_link(@search, :description, t('description')) %>
    </th>
    <th class="center-cell">
      <%= sort_link(@search, :date, t('date_locale')) %>
    </th>
    <th class="center-cell">
      <%= sort_link(@search, :status, t('status')) %>
    </th>
    <th class="right-cell">
      <%= sort_link(@search, :gross_cost, t('gross_cost').to_s + ' (€)') %>
    </th>
    <th class="right-cell">
      <%= sort_link(@search, :gross_cost, t('total').to_s + ' (€)') %>
    </th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% unless @projects.any? %>
    <tr>
      <td class="emptyTable" colspan="9"><%= t('no_data_display') %></td>
    </tr>
  <% end %>
  <% @projects.each do |project| %>
    <tr>
      <td class="center-cell">
        <%= link_to '#' + project.id.to_s, project_path(project.id), class: 'btn btn-info' %>
      </td>
      <td><%= project.customer ? project.customer.name : nil %></td>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td class="center-cell"><%= project.date ? l(project.date) : "" %></td>
      <%= tag.td class: 'center-cell', id: 'status-cell', status: project.status do %>
        <%= project.translated_status %>
      <% end %>
      <td class="right-cell"><%= number_with_precision project.total_gross, :precision => 2 %></td>
      <td class="right-cell"><%= number_with_precision project.total, :precision => 2 %></td>
      <td class="center-cell">
        <%= link_to project_path(project) do %>
          <%= image_tag("open-icon.png", size: "30x30") %>
        <% end %>
        <%= link_to edit_project_path(project), remote: true do %>
          <%= image_tag("edit-icon.png", size: "30x30") %>
        <% end %>
        <%= link_to project, method: :delete, data: {confirm: t('confirm_delete')} do %>
          <%= image_tag("delete-icon.png", size: "30x30") %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<div class="flickr_pagination">
  <%= will_paginate @projects %>
</div>

<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>

