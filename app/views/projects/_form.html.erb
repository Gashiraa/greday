<%= form_with(model: @project, local: true, class: "needs-validation") do |form| %>
  <div class="form">
    <div class="row">
      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Name') %>
        <%= form.text_field :name, class: "form-control", :required => true%>
        <div class="invalid-feedback">Example invalid custom select feedback</div>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Invoice') %>
        <%= form.text_field :invoice_id, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Quotation')%>
        <%= form.text_field :quotation_id, class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Customer') %>
        <%= form.select(:customer_id, Customer.all.collect {|customer| [customer.name, customer.id]}, {:include_blank => true}, {class: 'form-control', :required => true}) %>
        <div class="invalid-feedback">Example invalid custom select feedback</div>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Status') %>
        <%= form.select(:status, Project.statuses.keys{|status| [status.value,status.value]}, {}, {class: 'form-control'})%>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Wielding') %>
        <%= form.select(:wielding, Project.wieldings.keys{|wielding| [wielding.value,wielding.value]}, {}, {class: 'form-control'})%>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Machining') %>
        <%= form.select(:machining, Project.machinings.keys{|machining| [machining.value,machining.value]}, {}, {class: 'form-control'})%>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-2">
        <%= form.label t('Karcher') %>
        <%= form.select(:karcher, Project.karchers.keys{|karcher| [karcher.value,karcher.value]}, {}, {class: 'form-control'})%>
      </div>

      <div class="actions col-xs-10 col-sm-4 col-md-4 col-lg-2 createButton">
        <%= form.submit t('Create'), :class => "btn btn-dark form-group" %>
      </div>
    </div>
  </div>
<% end %>
